# Application Settings
APP_NAME="Colombia RAG Chatbot"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# Database Settings
VECTOR_DB_PATH="./data/vectorstore"
VECTOR_DB_COLLECTION_NAME="colombia_documents"

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONTEXT_LENGTH=4000
TOP_K_DOCUMENTS=5
SIMILARITY_THRESHOLD=0.7

# Model Configuration
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
LLM_MODEL="llama3.1"
LLM_TEMPERATURE=0.1
MAX_TOKENS=500

# Data Source
WIKIPEDIA_URL="https://es.wikipedia.org/wiki/Colombia"
DATA_UPDATE_INTERVAL=86400

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30